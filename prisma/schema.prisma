datasource db {
  provider = "postgresql"
  url      = env("DATABASE_CONECTION_STRING")
}

generator client {
  provider = "prisma-client-js"
}


model Post {
  id         String    @id @default(uuid())
  title      String
  content    String
  imageUrl   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  author     User      @relation(fields: [authorId], references: [id])
  authorId   String
  tags       String[]
  slug       String    @unique
  catgory    String
  comments   Comment[]
  imagesUrls String[]
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  createdAt DateTime  @default(now())
  name      String
  role      Role      @default(USER)
  password  String
  posts     Post[]
  comments  Comment[]
  avterUrl     String?
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
}

enum Role {
  USER
  ADMIN
}
